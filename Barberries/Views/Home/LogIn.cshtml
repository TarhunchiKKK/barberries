@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Barberries.Controllers.LogPair

<form asp-controller="Home" asp-action="Authorize">
	<div>
		@if(ViewBag.IsAdmin == true) {
			<input type="hidden" asp-for="NickName" value="Admin" />
		}
		else {
			<label asp-for="NickName">Имя:</label>
			<input type="text" asp-for="NickName" placeholder="Нельзя вводить 'Admin'"/>
			<span asp-validation-for="NickName"></span><br />
		}
		<label asp-for="Password">Пароль:</label>
		<input type="password" asp-for="Password" />
		<span asp-validation-for="Password"></span><br />
		<input type="submit" value="Далее" />
	</div>
	@if(ViewBag.IsAdmin == false) {
		<div>
			@Html.RouteLink("Зарегистрироваться", new {controller="Home", action = "Registration"})
		</div>
	}
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
