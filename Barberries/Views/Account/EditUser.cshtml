@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Barberries.Models.User

<html>
	<head>
		<meta charset="utf-8" />
		<title>Редактирование профиля</title>
	</head>
	<body>
		<form asp-controller="Account" asp-action="EditUser" method="post">
			<div>
				<p>
					<label asp-for="Surname"></label>
					<input type="text" asp-for="Surname" value="@Model.Surname" />
					<span asp-validation-for="Surname"></span>
				</p>
				<p>
					<label asp-for="Name"></label>
					<input type="text" asp-for="Name" value="@Model.Name" />
					<span asp-validation-for="Name"></span>
				</p>
				<p>
					<label asp-for="NickName"></label>
					<input type="text" asp-for="NickName" value="@Model.NickName" />
					<span asp-validation-for="NickName"></span>
				</p>
				<p>
					<label asp-for="Age"></label>
					<input type="number" asp-for="Age" value="@Model.Age" />
					<span asp-validation-for="Age"></span>
				</p>
				<p>
					<label asp-for="PhoneNumber"></label>
					<input type="text" asp-for="PhoneNumber" value="@Model.PhoneNumber" />
					<span asp-validation-for="PhoneNumber"></span>
				</p>
				<input type="submit" value="Редактировать" />
			</div>
		</form>
	</body>
</html>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
