@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Barberries.Models.Product>

<html>
	<head>
		<meta charset="utf-8" />
		<title>Избранные товары</title>
	</head>
	<body>
		<table>
			<thead>
				<tr>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach(Barberries.Models.Product product in Model) {
					<tr>
						<td>
							<img src="@product.Picture"
								title="@product.Name" width="400" height="341"
								alt="Изображение не может быть загружено"><br>
							@product.Name
						</td>
					</tr>
				}
			</tbody>
		</table>
		<p>
			<a asp-controller="Account" asp-action="HomePage">Назад</a>
		</p>
	</body>
</html>