@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Barberries.Models.Product

<html>
	<head>
		<meta charset="utf-8" />
		<tittle>@Model.Name</tittle>
	</head>
	<body>
		<h2>@Model.Name</h2>
		<p>
		<p>
			<img src="@Model.Picture" 
				title="@Model.Name" width="400" height="341"
				alt="Изображение не может быть загружено"/>
		</p>
			@if (Model.IsHere) {
				<form asp-controller="User" asp-action="BuyProduct">
					<div>
						<input type="submit" value="@Model.Cost" />
					</div>
				</form>
			}
		</p>
		@if (Model.IsHere) {
			<p>
				Количество: @Model.Count
			</p>
		}
		else {
			<p>
				<!-- TODO Красным циветом -->
				Нет на складе
			</p>
		}
		<h2>Описание:</h2>
		<p>
			@Model.Description
		</p>
		<h3>Параметры:</h3>
		<table align="center">
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Категория :</td>
					<td>@Model.Category!.Name</td>
				</tr>
				@foreach(KeyValuePair<string, string> pair in Model.Parameters) {
					<tr>
						<td>pair.Key :</td>
						<td>pair.Value</td>
					</tr>
				}	
			</tbody>
		</table>
	</body>
</html>